# ==============================================
# AI Cruel Backend - Environment Variables
# ==============================================
# Copy this file to .env and fill in your values

# ==============================================
# Application Settings
# ==============================================
HOST=0.0.0.0
PORT=8000
DEBUG=False
ENVIRONMENT=production
APP_NAME="AI Cruel - Deadline Manager"

# ==============================================
# CORS Settings
# ==============================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend.vercel.app,https://your-app.ondigitalocean.app

# ==============================================
# Security
# ==============================================
SECRET_KEY=your-super-secret-key-change-this-in-production-please-make-it-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==============================================
# Supabase Configuration (Required)
# ==============================================
# Get these from: https://supabase.com/dashboard/project/_/settings/api
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# ==============================================
# Database (Supabase PostgreSQL)
# ==============================================
# Get from: https://supabase.com/dashboard/project/_/settings/database
DATABASE_URL=postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres

# ==============================================
# Redis Configuration (Required for Background Tasks)
# ==============================================
# Options:
# 1. Upstash Redis (Free tier): https://upstash.com/
# 2. Digital Ocean Managed Redis: https://cloud.digitalocean.com/databases
# Format: redis://default:password@host:port or rediss://default:password@host:port (SSL)
REDIS_URL=redis://localhost:6379

# ==============================================
# Twilio Configuration (Required for SMS/WhatsApp)
# ==============================================
# Get from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# ==============================================
# Email Configuration (Required for Email Notifications)
# ==============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=AI Cruel Deadline Manager

# ==============================================
# Logging
# ==============================================
LOG_LEVEL=INFO